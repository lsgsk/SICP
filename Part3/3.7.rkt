(define (make-join account password new-password)
  (define (incorrect-password . args)
    "Неверный пароль!")
  (if ((account password 'check) password)
      (lambda (proxi-password command)
        (if (or (eq? proxi-password new-password) (eq? proxi-password password))
            (account password command)
            incorrect-password))
      incorrect-password))

  
