#lang racket

(define (make-account balance init-password)
  (define (withdraw amount)
    (if (>= balance amount)
        (begin (set! balance (- balance amount)) balance)
        "Недостаточно денег на счете"))
  (define (deposit amount)
    (set! balance (+ balance amount))
    balance)
  (define (incorrect-password . args)
    "Неверный пароль")
  (define (check-password password)
    (eq? password init-password))
  (define (dispatch password m)
    (if (eq? password init-password)
        (cond ((eq? m 'withdraw) withdraw)
              ((eq? m 'deposit) deposit)
              ((eq? m 'check) check-password)
              (else (error "Неизвестный вызов -- MAKE-ACCOUNT" m)))
        incorrect-password))
  dispatch)


